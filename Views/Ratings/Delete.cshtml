@model Coursify.Models.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Delete Rating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Rating</h1>

<h3>Are you sure you want to delete this rating?</h3>
<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Stars
        </dt>
        <dd class="col-sm-10">
            @Model.Stars
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="MyCourseDetails" asp-controller="Courses" asp-route-id="@Model.CourseId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
