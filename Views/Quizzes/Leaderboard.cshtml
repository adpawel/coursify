@model List<Coursify.Models.ViewModels.LeaderboardViewModel>

@{
    ViewData["Title"] = "Leaderboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Leaderboard</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Quizzes Solved</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Rank</td>
                <td>@item.UserName</td>
                <td>@item.QuizCount</td>
            </tr>
        }
    </tbody>
</table>
